<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}École Thot >{% endblock %}</title>

        {% block stylesheets %}
          <link rel="stylesheet" type="text/css" href="{{ asset('build/css/app.css') }}" media="screen"/>
        {% endblock %}
    </head>
    <body>

        <nav class="ui container">
            <div class="ui text menu">
                <div class="item">
                    <img src="{{ asset('/images/logo.png') }}">
                </div>

                <a class="item" href="{{ path('school') }}">{{ "menu.school"|trans }}</a>
                <a class="item" href="{{ path('news') }}">{{ "menu.news"|trans }}</a>
                <a class="item" href="{{ path('courses') }}">{{ "menu.courses"|trans }}</a>
                <a class="item" href="{{ path('contact') }}">{{ "menu.contact"|trans }}</a>
                <a class="item" href="{{ path('jobs') }}">{{ "menu.jobs"|trans }}</a>
                <a class="item highlight" href="">{{ "menu.donate"|trans }} ♥</a>

                <div class="ui right dropdown item lang-menu">
                    {{ ("lang." ~ app.request.locale)|trans }}
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        <div class="item">{{ "lang.fr"|trans }}</div>
                        <div class="item">{{ "lang.en"|trans }}</div>
                        <div class="item rtl">{{ "lang.ar"|trans }}</div>
                        <div class="item rtl">{{ "lang.ps"|trans }}</div>
                        <div class="item rtl">{{ "lang.fa"|trans }}</div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="ui main container">
            {% for label, messages in app.flashes %}
              {% for message in messages %}
                  <div class="ui icon message {{ label }} no-print">
                      <i class="question circle outline icon"></i>
                      <div class="content">
                        <div class="header">
                          {{ ("message." ~ label)|trans }}
                        </div>
                        <p>{{ message }}</p>
                      </div>
                  </div>
              {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
        <footer class="ui container">
            <a href="{{ path('legal') }}">{{ "footer.legal"|trans }}</a>
        </footer>
        {% block javascripts %}
          <script type="text/javascript" src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>